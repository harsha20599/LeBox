<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_logopage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nitwit.idiot.lebox.Logopage">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        card_view:cardCornerRadius="2dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        card_view:cardElevation="1dp"
        android:clickable="true"
        android:foreground="@drawable/ripple_recovery_bg"
        android:stateListAnimator="@anim/lift_on_touch">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.joooonho.SelectableRoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/rom_tab_layout"
                    android:src="@drawable/iconbg"
                    android:scaleType="matrix"
                    app:sriv_left_top_corner_radius="2dp"
                    app:sriv_right_top_corner_radius="0dp"
                    app:sriv_left_bottom_corner_radius="1dp"
                    app:sriv_right_bottom_corner_radius="0dp"
                    app:sriv_border_width="0dp"
                    app:sriv_border_color="#008fea"
                    app:sriv_oval="false"
                    android:layout_width="70dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/twrp302"
                    android:layout_width="50dp"
                    android:layout_height="match_parent" />

            </RelativeLayout>

            <TextView
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/text_watchdogsbootlogo"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Download"
                android:textSize="17sp"
                android:textColor="@color/black" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v4.view.ViewPager
        android:layout_marginTop="200dp"
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

</RelativeLayout>
