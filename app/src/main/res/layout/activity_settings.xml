<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nitwit.idiot.lebox.Settings">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/zyconutbg"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/textview_settings_title"
            android:layout_weight="2"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:gravity="center"
            android:text="@string/about_us_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_gravity="center"
            android:layout_weight="2"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/zyconut_white_transbg"/>

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/web"
                android:layout_weight="1"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/webicon"/>

            <ImageView
                android:id="@+id/donate"
                android:layout_weight="1"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/donateicon"/>

            <ImageView
                android:id="@+id/fb"
                android:onClick="fb"
                android:layout_weight="1"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/fbicon"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textview_footer"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="since 2k16"
            android:textAlignment="gravity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
